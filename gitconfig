    templatedir = ~/.git_template
[merge]
    tool = vimdiff
    #tool = meld
[pager]
	log  = diff-highlight | less -FSR
	show = diff-highlight | less -FSRX
	diff = diff-highlight | less -FSRX
[push]
    default = tracking
[rerere]
    enabled = 1
