[pager]
#   -F breaks on MacOS. (auto-quits and shows nothing if log is < 1 screen)
#   ==> brew install less
   diff = diff-highlight | less -FSRX
   log  = diff-highlight | less -FSRX
   show = diff-highlight | less -FSRX
