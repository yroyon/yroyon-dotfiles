[alias]
    ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    diffgui = difftool --tool=meld
    filehist = log --patch --stat --follow
    ignored = ls-files --directory -o
    l  = log --date=relative --decorate --pretty=format:'%C(yellow)%h%C(reset) %s%C(bold red)%d %C(green)(%ad) %C(blue)[%an]%C(reset)'
    lg = log --date=short --graph --pretty=format:'%Cblue%h%Creset | %C(yellow)%ad%Creset | %Cred%an%Creset | %s%d'
    restore = checkout --
    sattus = status
    stats = status
    todo = grep --untracked -I --heading --break --line-number --fixed-strings --word-regexp \
        -e XXX -e TODO -e FIXME -e @bug -e @todo
        # per-file hits:  -c  (appendable on CLI)
    unstage = reset HEAD --
    undo = reset --soft HEAD^ --
    vimdiff = difftool --tool=vimdiff
    wdiff   = diff --no-ext-diff --word-diff
    x = "!gitx"
[blame]
    date = short
[color]
    ui = true
[color "diff"]
#    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[core]
    abbrev = 9
    excludesfile = ~/.gitignore_global
#    gitProxy = git-http-proxy
#    pager = less -FRSX
[credential]
    helper = cache --timeout=3600
[diff]
    tool = vimdiff
    guitool = meld
[difftool]
    prompt = false
[diff "image"]
    textconv = identify
[diff "odf"]
    textconv = odt2txt
[diff "pdf"]
    textconv = ps2ascii
[diff "zip"]
    textconv = unzip -c -a
