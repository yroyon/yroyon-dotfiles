    helper = osxkeychain

[diff]
    algorithm = histogram
    guitool = meld
    tool = vimdiff
[difftool]
    prompt = false
[diff "image"]
    textconv = identify
[diff "odf"]
    textconv = odt2txt
[diff "pdf"]
    textconv = ps2ascii
[diff "zip"]
    textconv = unzip -c -a

